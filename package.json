{
  "name": "learn-lwc",
  "version": "0.0.4",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rm -rf node_modules __lwr_cache__ site",
    "dev": "lwr dev",
    "dev:compat": "lwr dev --mode compat",
    "build": "lwr build --clean",
    "build:prod-compat": "lwr build --clean --mode prod-compat",
    "start": "lwr start",
    "stage": "pnpm build && pnpm start",
    "stage:prod-compat": "pnpm build:prod-compat && pnpm start",
    "format": "prettier --write .",
    "check": "prettier --check .",
    "stylelint": "stylelint-config-prettier --check",
    "unit": "jest",
    "unit:watch": "jest --watch"
  },
  "engines": {
    "node": ">=16.0.0 <20"
  },
  "volta": {
    "node": "16.19.1"
  },
  "jest": {
    "preset": "@lwc/jest-preset",
    "moduleNameMapper": {
      "^(example|other)/(.+){{BODY}}": "<rootDir>/src/test/modules/$1/$2/$2"
    },
    "modulePathIgnorePatterns": [
      "site",
      "__lwr_cache__"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "lwc"
        }
      }
    ],
    "singleQuote": false,
    "trailingComma": "all"
  },
  "devDependencies": {
    "lwc": "2.45.1",
    "lwr": "0.9.4",
    "@lwc/engine-dom": "^2.45.1",
    "@lwc/jest-preset": "^11.8.0",
    "@lwc/jest-resolver": "^11.8.0",
    "@lwc/jest-serializer": "^11.8.0",
    "@lwc/jest-transformer": "^11.8.0",
    "@lwc/synthetic-shadow": "^2.45.1",
    "@lwrjs/client-modules": "^0.9.4",
    "@lwrjs/loader": "^0.9.4",
    "@lwrjs/o11y": "^0.9.4",
    "@lwrjs/router": "^0.9.4",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^22.0.0",
    "prettier": "^2.8.8",
    "stylelint-config-prettier": "^9.0.5",
    "typescript": "^5.0.4"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-prettier"
    ]
  }
}
